<%- include('header.ejs', {login}) %> 
    <form action="" method="POST">
        <div class="container mt-3">
            <div class="row">
                <div class="col-8">
                    <h1>ToDo List:</h1>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Todo item" aria-describedby="button-addon2" id="todoText" name="todoText" required>
                <div class="input-group-append">
                    <button class="btn btn-outline-info" type="submit" id="add-todo" formaction="/addtask">
                        Add Todo
                    </button>
                </div>
            </div>
            <h4>Todo</h4>
            <ul class="list-group list-group-flush" id="accomplishedList-holder">
                <% accomplishedList.forEach(item => { %>
                    <li class="list-group-item todo-list">
                        <%= item.id %>. <%= item.content %>
                        <div align="right">
                            <a class="btn btn-outline-warning" type="submit" href="/todo/delete/<%=item.id%>">del</a>
                            <a class="btn btn-outline-primary" type="submit" href="/todo/done/<%=item.id%>">done</a>
                        </div>
                    </li>
                <% }) %>
            </ul>
            <h4>Completed</h4>
            <ul class="list-group list-group-flush done" id="continueList-holder">
                <% continueList.forEach(item => { %>
                    <li class="list-group-item todo-list">
                        <%= item.id %>. <%= item.content %>
                    </li>
                <% }) %>
            </ul>
        </div>
    </form>
<%- include('footer.ejs')  %> 